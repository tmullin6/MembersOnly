<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>

    <div class="header">
      <div class="title">
          <h1><a href="/">Speak Your Mind</a></h1>
      </div> 
      <div class="links">
        <% if(typeof(user)=="object" && user) { %>
          <div class="user">
            Welcome Back <%= user.username %>
          </div>
          <a href='/logout'><button>Log Out</button></a>
          <% } else {%>
          <a href="/login"><button>Sign In</button></a>
          <a href="/signup"><button>Join</button></a>

          <% } %>
      </div>
  </div>

  <div class='form-title'>
    <h1>Create New Post</h1>
  </div>
   

    <div class=message-form>
        <h3>Post By: <%= user.username %></h3>
        
        <form action="/message/create" method="POST">
            <label for='title'>Title:</label><br>
            <input type="text" name="title"placeholder="Enter Title Here" required><br><br><br>
            <label for="text">What's on your mind?</label><br>
            <textarea cols="50" rows="20" name="text" placeholder="Enter Text Here"></textarea><br>
            <input type="submit">
        </form>
     
    </div>

    <div>
    <% if(typeof(errors)=='object' && errors) {%>

        <ul>
            <% for(let i=0; i<errors.length; i++) { %>
                <li><%= errors[i].msg%></li>
                <% } %>
        </ul>

        <% } %>
    </div>

  </body>
</html>
